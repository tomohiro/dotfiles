# vim: ft=gitconfig
[user]
    name = Tomohiro Taira
    email = tomohiro.t@gmail.com
[color]
    status = auto
    ui = auto
    diff = auto
    branch = auto
[core]
    pager = less -r
    quotepath = false # git status for file name in japanese
[alias]
    master = checkout master
    st = status -s
    ci = commit
    co = checkout
    cb = checkout -b
    br = branch
    history = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
    gr = log --graph --date=short --decorate=short --pretty=format:'%Cgreen%h %Creset%cd %Cblue%cn %Cred%d %Creset%s'
    shorten = !"sh -c 'curl -i http://git.io/ -F url=$1 `[ -n \"$2\" ] && echo -F code=$2`' -"
    type = cat-file -t
    dump = cat-file -p
[merge]
    tool = vimdiff
[commit]
    # https://help.github.com/articles/signing-commits-using-gpg/
    gpgsign = false
[pager]
    #log = diff-highlight | less
    #show = diff-highlight | less
    #diff = diff-highlight | less

# Git repository aliases
#   Clone Me Maybe - http://robots.thoughtbot.com/post/27695057156/clone-me-maybe
[url "git://github.com/"]
    insteadOf = gh:  # Read only access
[url "git@github.com:"]
    insteadOf = wgh: # With write access
[url "git@heroku.com:"]
    insteadOf = heroku:

[credential]
    helper = osxkeychain

[hub]
    protocol = https

# Include private gitconfig
[include]
    path = ~/.gitconfig.local

# Git Large File Storage https://github.com/git-lfs/git-lfs
[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    required = true
    process = git-lfs filter-process
